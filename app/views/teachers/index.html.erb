<div class="bodynonav">
    <br>
<h1> <strong>ACCOUNTS</strong>  |  Teacher Accounts</h1>
    <br>
 <%= render '/layouts/breadcrumbteacher' %>
    <%= yield %>
    <br>

<table class="table table-striped">
    <tr>
        <th>User Name</th>
        <th>First Name </th>
        <th>Last Name</th>
        <th></th>
        <th></th>
    </tr>
    <% @teachers.each do |p| %>
        <tr>
            <td><%= p.pusername %></td>
            <td><%= p.firstname %></td>
            <td><%= p.lastname %></td>
            <td><%= link_to "Edit",  edit_teacher_registration_path, class: 'btn btn-warning'  %> </td>
            <td><%= link_to "Delete", teachers_path, 
                    method: :delete,
                    data: { confirm: "Are you sure you want to delete this account?" },
                    class: 'btn btn-danger' %></td>
        </tr>
    <% end %>
</table> 

<div>
 <%= link_to "Create Teacher", new_teacher_registration_path, class: "btn btn-primary btn-lg" %>
 </div>