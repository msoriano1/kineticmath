<div class="bodynonav">
    <br>
<h1> <strong>ACCOUNTS</strong>  |  Create Teacher Account</h1>
<br>
 <%= render '/layouts/breadcrumbteacher' %>
    <%= yield %>
    <br>
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <p><%= f.label :pusername %><br>
    <%= f.text_field :pusername, :label => false   %></p>
    
    <p><%= f.label :firstname %><br>
    <%= f.text_field :firstname, :label => false   %></p>
    
    <p><%= f.label :lastname %><br>
    <%= f.text_field :lastname, :label => false   %></p>
    
    
    <%= f.label :password %>
    <%= f.input :password, required: true, :label => false %> <br>
    <%= f.label :password_confirmation %>  
    <%= f.input :password_confirmation, required: true, :label => false   %>
  </div>
<br>
  <div class="form-actions">
    <%= f.button :submit, "Create Account", class: "btn btn-primary btn-lg"%>
  </div>
<% end %>
</div>

