<br>
<h1> <strong>WORKSHEETS</strong>  |  Select Year Level</h1>
<ol class="arrows">
    <li><%= link_to "Home", root_path, method: :get %></li>
    <li><h2>Worksheets</h2></li>
</ol>
<div class="row">
    <div class="col-lg-12">
        <% if @yearlevels.count > 0 %>
        <table class="table table-striped table-responsive-md"> 
            <thead>
                <tr>
                    <th class="text-center">Year Level</th>
                    <th>Description</th>
                    <th></th>
                </tr>     
            </thead>
            <tbody>
                <% @yearlevels.each do |i| %>
                    <tr> 
                        <td class="text-center"><%= i.number %></td>
                        <td><%= i.description %></td>
                         <td> <%= link_to 'Select', yearlevel_path(i), class: "btn btn-primary btn-lg", method: :get %> </td>
                    </tr>
                <% end %>
            </tbody>
        </table>
        <% else %>
            <div class="text-center">
                <h2 class="text-regular text-center">No year levels available</h2>
                <br>
                <%= link_to "Create a year level", new_yearlevel_path, class: "btn btn-primary btn-lg text-center", style: 'margin-bottom:20px;', method: :get %>
            </div>
        <% end %>
        
        
    </div>
</div>

