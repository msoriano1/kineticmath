        <img src = "https://i.imgur.com/AkFcg0k.png">
      <% end %>
      <ul class="nav nav-pills navbar-left teacher">
        <li>
          <%= link_to yearlevels_path "WORKSHEETS", method: :get, class: "nav-item nav-link nav-pills teacher data-toggle"%>
        </li>
        <li>
          <%= link_to "NEED HELP", root_path, method: :get, class: "nav-item nav-link nav-pills teacher data-toggle"%>
        </li>
      </ul>
      <p id="navcon">
      Logged in as <strong><%= current_teacher.pusername %></strong> |
      <%= link_to "Logout", destroy_teacher_session_path, method: :delete, :class => 'navbar-link'  %>
