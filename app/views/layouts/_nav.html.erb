<% elsif for_admin %>
  <nav class="navbar sticky-top navbar-inverse admin">
    <div class="container-fluid">
      <%= link_to root_path, method: :get do %>
        <img src = "https://i.imgur.com/AkFcg0k.png">
      <% end %>
      <ul class="nav nav-pills pull-left admin">
