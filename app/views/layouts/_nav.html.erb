            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink" style="margin-top:-2px;">
              <%= link_to "Students", students_path, method: :get, class: "dropdown-item"%>
              <%= link_to "Teachers", teachers_path, method: :get, class: "dropdown-item"%>
